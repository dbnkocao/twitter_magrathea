<div class="card">
  <div class="card-header text-center">
    <h3>Nova Hashtag</h3>
  </div>
  <div class="card-body">
    <%= form_for @hashtag do |f| %>
      <div class="form-group">
        <label>
          Descrição
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">#</span>
            </div>
            <%= f.text_field :descricao, class: "form-control", id: "hashtag", onkeyup: "hashtag_mask(this)" %>
          </div>

        </label>
      </div>
      <%= f.submit 'Criar Hashtag', class: "btn btn-primary"%>
    <% end %>
  </div>
</div>